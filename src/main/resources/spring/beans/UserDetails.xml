<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- UserDetails business object -->
	<bean id="userDetailsBo" class="com.qph.userdetails.bo.impl.UserDetailsBoImpl">
		<property name="userDetailsDao" ref="userDetailsDao"></property>
	</bean>

	<!-- UserDetails Data access object -->
	<bean id="userDetailsDao" class="com.qph.dao.impl.UserDetailsDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>

	<bean id="vehicle" class="com.qph.entity..vehicle.Vehicle"
		abstract="true">
	</bean>

	<bean id="twoWheeler" class="com.qph.model.TwoWheeler" scope="prototype">
		<constructor-arg value="Steering Handle" />
		<constructor-arg value="20" />
	</bean>

	<bean id="fourWheeler" class="com.qph.model.FourWheeler">
		<property name="SteeringWheel" value="Steering wheel"></property>
	</bean>

	<bean id="userDetails" class="com.qph.model.UserDetails" scope="prototype">

	</bean>

	<bean id="address1" class="com.qph.model.Address">
		<qualifier value="userDetailsRelated"/>
		<constructor-arg value="Tran Huy Lieu" />
		<constructor-arg value="Phu Nhuan" />
		<constructor-arg value="Ho Chi Minh" />
	</bean>

	<bean id="address2" class="com.qph.model.Address">
		<constructor-arg value="Nguyen Van Troi" />
		<constructor-arg value="Phu Nhuan" />
		<constructor-arg value="Ho Chi Minh" />
	</bean>
</beans>